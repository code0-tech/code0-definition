{
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",
    "moduleDetection": "force",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
  }
}
